			<form action="" methode="POST" class="form_chat">
				<input type="hidden" name="message_action" class="message_action" value="send" >
				<div class="form-group">
					<div class="col-xs-11">
						<input type="text" placeholder="Message" name="message_chat" class="message_chat">
					</div>
