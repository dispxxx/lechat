				<input type="hidden" name="message_action" class="message_action" value="send" >
				<div class="input-group">
			      	<input type="text" class="form-control message_chat" name="message_chat" placeholder="Message">
			      	<span class="input-group-btn">
			        	<button class="btn btn-default" type="submit"><span style='line-height : inherit' class="glyphicon glyphicon-send" aria-hidden="true"></span></button>
			      	</span>
			    </div>

